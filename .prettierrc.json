{
  "$schema": "http://json.schemastore.org/prettierrc",
  "plugins": [
    "./node_modules/prettier-plugin-multiline-arrays"
  ],
  "printWidth": 130,
  "tabWidth": 2,
  "useTabs": false,
  "endOfLine": "lf",
  "arrowParens": "avoid",
  "quoteProps": "as-needed",
  "bracketSpacing": true,
  "bracketSameLine": false,
  "singleQuote": true,
  "semi": true,
  "trailingComma": "none",
  "multilineArraysWrapThreshold": 1,
  "multilineFunctionArguments": false,
  "overrides": [
    {
      "files": "*.component.html",
      "options": {
        "printWidth": 140,
        "parser": "angular"
      }
    },
    {
      "files": "*.json",
      "options": {
        "multilineArraysWrapThreshold": 0
      }
    }
  ]
}
